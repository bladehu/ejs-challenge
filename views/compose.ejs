<%- include("partials/header"); -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="title" class="form-label">Title</label>
    <input type="text" id="title" class="form-control" name="postTitle" required>
    <label for="postBody" class="form-label">Post</label>
    <textarea class="form-control" id="postBody" rows="4" name="postBody" required></textarea>
  </div>
  <button class="btn btn-primary btn-sm" type="submit" name="button">Publish</button>
</form>


<%- include("partials/footer"); -%>
